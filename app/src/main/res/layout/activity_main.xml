<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lihstudios.com.calculator.MainActivity"
    android:background="@android:color/holo_orange_dark">

    <TextView
        android:id="@+id/Result"
        android:textSize="30sp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp"
        android:layout_width="320dp"
        android:background="@android:color/background_light" />

    <Button
        android:text="--"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_alignTop="@+id/plus"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:id="@+id/minus"
        android:onClick="onClickButton2"
        style="@android:style/Widget.Button.Inset" />

    <Button
        android:text="/"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/umnbutton"
        android:layout_alignEnd="@+id/minus"
        android:id="@+id/delbutton"
        android:onClick="onClickButton3"
        style="@android:style/Widget.Button.Inset" />

    <Button
        android:text="Clear"
        android:layout_height="70dp"
        android:id="@+id/Clean"
        android:onClick="onClickButton7"
        android:layout_below="@+id/minus"
        android:layout_alignEnd="@+id/minus"
        android:layout_width="143dp"
        style="@android:style/Widget.Button.Inset" />

    <Button
        android:text="*"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/umnbutton"
        android:onClick="onClickButton4"
        android:layout_below="@+id/Clean"
        android:layout_alignStart="@+id/plus"
        style="@android:style/Widget.Button.Inset" />

    <Button
        android:text="+"
        android:layout_marginTop="48dp"
        android:id="@+id/plus"
        android:onClick="onButtonClick"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/Vtorchisl"
        android:layout_alignStart="@+id/Vtorchisl"
        style="@android:style/Widget.Button.Inset" />

    <EditText
        android:layout_width="150dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Vtorchisl"
        android:hint="b"
        android:layout_marginTop="77dp"
        android:textSize="20sp"
        android:layout_height="50dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/Result"
        android:layout_alignStart="@+id/Clean"
        android:textColorLink="@android:color/holo_blue_dark" />

    <EditText
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Perchisl"
        android:hint="a"
        android:layout_width="150dp"
        android:textSize="20sp"
        android:background="@android:color/background_light"
        android:layout_alignStart="@+id/Result"
        android:layout_alignTop="@+id/Vtorchisl"
        android:textColorLink="@android:color/holo_blue_light" />

    <TextView
        android:text=" Elektronika 0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        style="@android:style/Widget.DeviceDefault.TextView"
        android:textStyle="normal|bold|italic" />

    <Button
        android:text="SQR"
        android:layout_height="70dp"
        android:id="@+id/button"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="70dp"
        android:layout_alignBottom="@+id/plus"
        android:layout_alignStart="@+id/Perchisl"
        android:onClick="onClickButton5" />

    <Button
        android:text="SQRT"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/button2"
        style="@android:style/Widget.Button.Inset"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:onClick="onClickButton6" />

</RelativeLayout>
